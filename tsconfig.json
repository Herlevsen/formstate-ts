{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "lib",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "rootDirs": ["src"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
