{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "module": "es2015",
        "target": "es5",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "outDir": "dist",
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}